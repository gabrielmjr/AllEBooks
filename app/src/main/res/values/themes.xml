<resources>
    <style name="Application.AllEBooks.Starting" parent="Theme.SplashScreen">
        <item name="backgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.AllEBooks</item>
    </style>


    <style name="Theme.AllEBooks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AllEBooks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Application.Widget.CardView" parent="Theme.AllEBooks">
        <item name="android:background">@color/color_card_view</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>